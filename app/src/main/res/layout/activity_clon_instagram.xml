<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="1"
        android:rowCount="8"
        tools:context=".ClonInstagram"
        android:background="@drawable/gradient">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp" app:srcCompat="@drawable/logo_instagram" android:id="@+id/imageView"
            android:layout_weight="1"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginLeft="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:padding="10dp"
            android:textColor="#fff"
            android:textColorHint="#85FFFFFF"
            android:id="@+id/editText" android:layout_weight="1" android:hint="Username"
            android:elegantTextHeight="false"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:padding="10dp"
            android:textColor="#fff"
            android:textColorHint="#85FFFFFF"
            android:id="@+id/editText2" android:layout_weight="1" android:hint="Password"/>
    <Button
            android:text="Log In"
            android:layout_width="fill_parent"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/button"
            android:textColor="#DCFFFFFF"
            android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"/>
    <TextView
            android:text="Forgot your login details? Get help signing in"
            android:textColor="#fff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:id="@+id/textView"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_column="0"
            android:layout_row="5"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content">
            <TextView

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#3EFFFFFF"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="OR"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3EFFFFFF"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_column="0"
            android:layout_row="6"
            android:gravity="center"
            android:textAlignment="center"
    >
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/logo_facebook"
                    android:id="@+id/imageView2"/>
            <TextView
                    android:text="Log in with Facebook"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="800"
                    android:id="@+id/textView2"/>
    </LinearLayout>

</GridLayout>